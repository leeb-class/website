<div class="row">
  <div class=" col-md-10">
    <div class="panel panel-default" >
      <div class="panel-heading">
        <h3 class="panel-title">Listing pages</h3>
      </div>
      <div class="panel-body">
        <table class="table">
          <thead>
            <tr>
              <th>Order</th>
              <th>Title</th>
              <th>URL</th>
              <th>Visible</th>
              <th>Editable</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @pages.each do |page| %>
              <tr>
                <td><%= page.order%></td>
                <td><%= page.title%></td>
                <td><a href="page/<%=page.url%>">/page/<%= page.url%></a></td>
                <td><%if page.visible%>
                  <i class="glyphicon glyphicon-ok"><i>
                    <%end%>
                </td>
                <td><%if page.editable%>
                  <i class="glyphicon glyphicon-ok"><i>
                    <%end%>
                </td>
                <td><%= link_to 'Show', page %></td> 
                <td><%= link_to 'Edit', edit_page_path(page) %></td>
                <td><%= link_to 'Destroy', "/pages/delete/#{page.id}", 
                  method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= link_to 'New Page', new_page_path, class: "btn btn-primary"%>
        
      </div>
    </div>
  </div>
</div>
