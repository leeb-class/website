<%= form_for(@document) do |f| %>
  <% if @document.errors.any? %>
    <div class="alert alert-danger">
      <ul>
      <% @document.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <%end%>
  <div class="form-group">
    <%=f.label :name%>
    <%=f.text_field :name, class: "form-control"%>
  </div>
  <div class="checkbox">
     <label>
       <%=f.check_box :public%>
       Public
     </label>
   </div>
  <div class="form-group">
    <%=f.label :file%>
    <%=f.file_field :file%>
  </div>

  <div class="actions">
    <%= f.submit "Upload Document", class: "btn btn-success btn-block" %>
  </div>
<% end %>

