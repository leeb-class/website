<div class="row">
  <div class=" col-md-10">
    <div class="panel panel-default" >
      <div class="panel-heading">
        <h3 class="panel-title">Listing documents</h3>
      </div>
      <div class="panel-body">
        <div class="alert alert-info no-hide">
          <i class="glyphicon glyphicon-warning-sign"></i> Do not mark sensitive documents public!
        </div>
        <table class="table">
          <thead>
            <tr>
              <th>Name</th>
              <th>URL</th>
              <th>Public</th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @documents.each do |document| %>
              <tr>
                <td><%= document.name%></td>
                <td><a href="document/<%=document.url%>">/document/<%=document.url%></a></td>
                <td><% if document.public %><i class="glyphicon glyphicon-ok"></i><%end%></td>
                <td><%= link_to 'Destroy', "/documents/delete/#{document.id}", 
                  method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= link_to 'New Document', new_document_path, class: "btn btn-primary"%>
        
      </div>
    </div>
  </div>
</div>
